function walkCoordinates(payload) {
    Orion.Print('üöö Payload received in walkCoordinates: "' + payload + '"');

    var parts = payload.trim().split(' '); // ['988', '512', '-30']
    Orion.Print('üîß Split parts: ' + JSON.stringify(parts));

    if (parts.length < 2) {
        Orion.Print('‚ùå Invalid coordinate payload: ' + payload);
        return;
    }

    var x = parseInt(parts[0]);
    var y = parseInt(parts[1]);
    var z = parts[2] ? parseInt(parts[2]) : 0;

    Orion.Print('üßÆ Parsed coords ‚Äî X: ' + x + ', Y: ' + y + ', Z: ' + z);

    if (isNaN(x) || isNaN(y)) {
        Orion.Print('‚ùå Could not parse coordinates ‚Äî check message format');
        return;
    }

    Orion.SayParty('Walking to: [' + x + ', ' + y + ', ' + z + ']');
    Orion.CharPrint('self', 92, 'üö∂ Walking to: [' + x + ', ' + y + ', ' + z + ']');
    Orion.WalkTo(x, y, z, 1, 255, 1, 1, 25000);
}


