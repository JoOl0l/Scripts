function discoNearest() {
    while (!Player.Dead()) {
        Orion.ClearJournal(); // Clear old journal lines at start of loop
        Orion.UseIgnoreList('DiscoList');

        var mobs = Orion.FindTypeEx(any, any, ground, 'mobile', 10, "red|gray|enemy").sort(function (a, b) {
            return Orion.GetDistance(a.Serial()) - Orion.GetDistance(b.Serial());
        });

        Orion.ResetIgnoreList();

        var target = mobs[0];

        if (target) {
            Orion.UseType('0x0E9D|0x0E9C|0x0EB2|0x0EB3');
            Orion.Print("Using Discordance on " + target.Name() + " " + target.Distance() + " tiles away");
            Orion.SayParty("Using Discordance on " + target.Name() + " " + target.Distance() + " tiles away");

            Orion.UseSkill('Discordance');
            Orion.WaitTargetObject([target.Serial()]);
            Orion.Wait(500); // Give time for journal to update

            // Wait up to 2 seconds for relevant messages to appear
            Orion.WaitJournal("You play jarring|That creature is already in discord|You attempt to disrupt your target", Orion.Now(), 2000);

            // Check for success
            if (Orion.InJournal("You play jarring") !== -1) {
                Orion.Print("‚úÖ Discordance SUCCESS on " + target.Name());
                Orion.SayParty("‚úÖ Discordance SUCCESS on " + target.Name());
                Orion.AddIgnoreListObject('DiscoList', [target.Serial()]);
            }
            // Check for known failure messages
            else if (
                Orion.InJournal("That creature is already in discord") !== -1 ||
                Orion.InJournal("You attempt to disrupt your target") !== -1
            ) {
                Orion.SayParty("‚ùå Discordance FAILED or Already Discorded: " + target.Name());
                Orion.Print("‚ùå Discordance FAILED or Already Discorded: " + target.Name());
                // Do not add to ignore list
                // Do not clear the list
            }
            // Wait 12 seconds before next attempt
            Orion.Wait(12000);
        } else {
            Orion.Print("No targets found ‚Äî clearing ignore list");
           Orion.SayParty("No targets found ‚Äî clearing ignore list");
           // Orion.ClearIgnoreList('DiscoList');
            Orion.Wait(1000);
        }
    }
}

function AutoProvo() {
    while (!Player.Dead()) {
        Orion.UseIgnoreList('ProvoList');
        var mob = Orion.FindTypeEx(any, any, ground, 'mobile', 13, 'red|gray|criminal').sort(function (a, b) {
            return Orion.GetDistance(a.Serial()) - Orion.GetDistance(b.Serial());
        });

        for (var i = 0; i < mob.length; i += 2) {
            if (!mob[i] || !mob[i + 1]) {
                break;
            }

            var xDiff = mob[i + 1].X() - mob[i].X();
            var yDiff = mob[i + 1].Y() - mob[i].Y();
            var mobRelativeDistance = Math.sqrt(xDiff * xDiff + yDiff * yDiff);
            var playerDistanceOne = mob[i].Distance();
            var playerDistanceTwo = mob[i + 1].Distance();
            var target = mob[0];
            var target2 = mob[1];

            if (mobRelativeDistance < 12 && playerDistanceOne < 12 && playerDistanceTwo < 12) {
                Orion.UseType('0x0E9D|0x0E9C|0x0EB2|0x0EB3');
                Orion.CharPrint(mob[i].Serial(), 1153, 'Inciting');
                Orion.CharPrint(mob[i + 1].Serial(), 1153, 'Onto');
                Orion.SayParty(mob[i].Serial(), 1153, 'Inciting');
                Orion.SayParty(mob[i + 1].Serial(), 1153, 'Onto');
                Orion.WaitTargetObject([mob[i].Serial(), mob[i + 1].Serial()]);
                Orion.UseSkill('22');
                Orion.Wait(100);
                Orion.Print("Ignoring " + mob[0].Name());
                Orion.AddIgnoreListObject('ProvoList', [target.Serial()]);
                Orion.Print("Ignoring " + mob[1].Name());
                Orion.AddIgnoreListObject('ProvoList', [target2.Serial()]);
                Orion.Wait(7500);
                if (Orion.Timer("ProvoTimer") >= 45000) {
                    Orion.Print("Clearing ignore list");
                    Orion.ClearIgnoreList('ProvoList');
                    Orion.RemoveTimer('ProvoTimer');
                }
                if (Orion.TimerExists('ProvoTimer') && Orion.Timer("ProvoTimer") <= 45000) {
                    // timer already exists
                } else {
                    Orion.SetTimer('ProvoTimer', 0);
                    Orion.AddDisplayTimer('1', 45000, 'RightTop', 'bar', 'Provoke Ignore List Reset', -85, 10, '0', '-1');
                }
            }
            Orion.Wait(1000);
        }
        Orion.Wait(100);
    }
}
function mountUp() {
    if (Orion.BuffExists('Stone Form')) {
        Orion.SayParty('I am in Stone Form and can not mount');
        return;
    }

    if (Player.Followers() < 1) {
        var ethy = Orion.FindObject('0x43CD6A14');
        if (ethy) {
            Orion.SayParty('Mounting ' + ethy.Name());
            Orion.UseObject(ethy.Serial());
            if (Player.Frozen()) {
                Orion.Wait(50);
            }
        } else {
            Orion.SayParty('Mount failed: ethereal not found');
        }
    } else {
        Orion.SayParty('Already Mounted');
        Orion.Wait(100);
    }

    Orion.Wait(500);
    return;
}


function CrossHeal() {
    if (Orion.SkillValue("Magery") < 7500) {
        //Orion.Print(1191, "[CrossHeal] Script Started");
        while (!Player.Dead()) {
            Orion.Wait(100);

            //  Self Cure
            if (Player.Poisoned() && Player.Hits('%') < 80) {
                Orion.SayParty('Curing Myself');
                Orion.Cast('Cure');
                if (Orion.WaitForTarget(3000)) {
                    Orion.TargetObject(Player.Serial());
                }
                Orion.Wait(2000);
                continue;
            }

            //  Self Heal
            else if (Player.Hits('%') < 60) {
                Orion.SayParty('Casting Heal on Self');
                Orion.Cast('Greater Heal');
                if (Orion.WaitForTarget(3000)) {
                    Orion.TargetObject(Player.Serial());
                }
                Orion.Wait(2000);
                continue;
            }

            //  Check party members nearby
            var friends = Orion.FindTypeEx(-1, -1, 'ground', 'human|inlos|live', 10, 'green');
            for (var i = 0; i < friends.length; i++) {
                var friendSerial = friends[i].Serial();
                if (friendSerial === Player.Serial())
                    continue;

                var friend = Orion.FindObject(friendSerial);
                if (!friend || Orion.GetDistance(friendSerial) > 10)
                    continue;

                Orion.ShowStatusbar(friendSerial, 550, 200);
                Orion.Wait(50);
                Orion.GetStatus(friendSerial);
                Orion.Wait(50);

                //  Cross Cure Friend
                if (friend.Poisoned() && friend.Hits('%') < 50) {
                    Orion.SayParty('Casting Cure on: ' + friend.Name());
                    Orion.Cast('Cleansing Winds');
                    while (Player.Frozen()) {
                        Orion.Wait(100);
                    }
                    if (Orion.WaitForTarget(3000)) {
                        Orion.TargetObject(friendSerial);
                    }
                    Orion.Wait(3500);
                }

                //  Cross Heal Friend
                else if (friend.Hits('%') < 70) {
                    Orion.SayParty('Casting Greater Heal on: ' + friend.Name());
                    Orion.Cast('Greater Heal');
                    while (Player.Frozen()) {
                        Orion.Wait(100);
                    }
                    if (Orion.WaitForTarget(3000)) {
                        Orion.TargetObject(friendSerial);
                    }
                    Orion.Wait(2500);
                }
            }

            Orion.Wait(800); // General cooldown to reduce spam
        }
    }
